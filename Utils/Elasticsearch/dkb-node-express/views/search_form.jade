extends layout

block content
	div.container
	h2 Search form
	form(action="/dataset_search", name="search_datasets", method="post")
		div.input
			p.label Keywords
			br
			textarea(type="textarea", name="keywords")
		p Start Date
		input(type="text", id="start_datepicker", name="start_date")
		p End Date
		input(type="text", id="end_datepicker", name="end_date")
		div.actions
			input(type="submit", value="Search")
	h2 Search by parameters
	form(action="/parameter_search", name="parameter_search", method="post")
		select(class="form-control")
			for item in keys
				option= item